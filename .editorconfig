# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
# Once 'root' is found the editor plugin will stop searching for .editorconfig files - allows cascading effect
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
charset = utf-8

